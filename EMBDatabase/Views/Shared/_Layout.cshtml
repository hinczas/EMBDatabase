<!DOCTYPE html>
<style>
    .navbar-inverse .btn {
        background-color: #555555;
        border-color: #555555;
        color: #999999;
        border:solid;
        border-width:1px;
    }
        .navbar-inverse .btn:hover {
            color: #ffffff;
            background-color: #777777;
            border-color: #777777;
        }
    .pad {
        padding-left: 10px;
    }
    a:hover {
        text-decoration: none;
    }
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EMBDatabase</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EMBDatabase", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> @Html.ActionLink("Electronics", "Electronics", "Home")</li>
                    <li> @Html.ActionLink("Books", "Electronics", "Home")</li>
                    <li> @Html.ActionLink("Multimedia", "Electronics", "Home")</li>
                    
                </ul>
                <form class="navbar-form navbar-right">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search all...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                        </span>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Quick links <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li> @Html.ActionLink("Electronics", "Electronics", "Home")</li>
                            <li class="pad"> @Html.ActionLink("Parts", "Index", "Parts")</li>
                            <li class="pad"> @Html.ActionLink("Manufacturers", "Index", "Manufacturers")</li>
                            <li class="pad"> @Html.ActionLink("Locations", "Index", "Locations")</li>
                            <li role="separator" class="divider"></li>
                            <li> @Html.ActionLink("Books", "Electronics", "Home")</li>
                            <li role="separator" class="divider"></li>
                            <li> @Html.ActionLink("Multimedia", "Electronics", "Home")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EMBDatabase</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
