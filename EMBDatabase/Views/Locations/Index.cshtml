@model IEnumerable<EMBDatabase.Models.Location>

@{
    ViewBag.Title = "Locations";
}
<style>
    .glyphicon {
        font-size: 15px;
    }

    .glyphicon-download {
        font-size: 30px;
        vertical-align: middle;
    }

    .form-inline {
        vertical-align: top;
    }

    a:hover {
        text-decoration: none;
    }

    .inputfile {
        width: 0.1px;
        height: 0.1px;
        opacity: 0;
        overflow: hidden;
        position: absolute;
        z-index: -1;
    }

        .inputfile + label {
            font-size: 1em;
            font-weight: 100;
            color: white;
            display: inline-block;
            cursor: pointer; /* "hand" cursor */
        }
    .media-object {
        max-width: 32px;
        max-height: 32px;
    }
</style>
<div>
    <p />
</div>
<div class="row">
    <div class="col-md-3" style="padding-right:0px;">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">Info</div>
                    <div class="panel-body">
                        <p>
                            Entries: <b>@Model.Count()</b><br />
                            Location parts: <b>@Model.Select(a => a.Parts.Count()).Sum()</b><br />
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row" style="margin-bottom :10px;">
            <div class="col-md-12">
                <div class="form-inline">
                    <div class="btn-group pull-left">
                        @Html.ActionLink("Create", "Create", null, new { @type = "button", @class = "btn btn-primary form-control" })
                        @Html.ActionLink("Export", "Export", null, new { @class = "btn btn-warning form-control" })
                        @using (Html.BeginForm("Import", "Locations", FormMethod.Post, new { enctype = "multipart/form-data", @class = "btn-group" }))
                        {
                            <input type="file" name="file" id="file" class="inputfile" />
                            <label for="file" class="btn btn-danger  form-control">Import </label>
                            <input type="submit" value="OK" class="btn btn-danger  form-control" />
                        }
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        @Html.ActionLink("All Locations", "Index")
                    </div>
                    <table class="table table-hover">
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                Location Parts
                            </th>
                            <th>
                                All Parts
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @if (item.File == null)
                                {
                                    <img class="media-object" src="~/Content/Files/Static/no_photo.png" alt="">
                                }
                                else
                                {
                                    <img class="media-object" src=@Url.Content(item.File.File_Path) alt="">
                                }
                            </td>
                            <td>
                                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                            </td>
                            <td>
                                @item.Parts.Count()
                            </td>
                            <td>
                                @item.Parts.Select(a => a.Quantity).Sum()
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Locations", new { id = item.Id })">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this Location?');", @class = "glyphicon glyphicon-remove" })
                            </td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>